<div class="form">
  <%# form to create new task %>
  <%= simple_form_for(@task) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <%= f.submit %>
  <% end %>

  <br>
  <%# link back to list %>
  <%= link_to "Back to list", tasks_path %>
</div>